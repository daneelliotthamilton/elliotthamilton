<h1>Editing service</h1>

<%= simple_form_for @service, url: admin_practice_area_service_path(practice_area_id: @practice_area.id, id: @service.id) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :category, collection: Service::CATEGORIES, input_html: {class: "select2"} %>
    <%= f.input :description %>
    <%= f.input :content, as: :rich_text_area %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>render "form", service: @service %>

<br>

<div>
  <%= link_to "Show this service", @service %> |
  <%= link_to "Back to services", services_path %>
</div>
