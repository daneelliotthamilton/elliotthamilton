
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :category, collection: Article::CATEGORIES, input_html: { class: 'select2' } %>
    <%= f.input :description, as: :text %>
    <%= f.input :tag_list, collection: @article.tag_list, input_html: {class: 'tags-select', "multiple"=>"multiple"} %>
    <%= f.input :body, as: :rich_text_area, input_html: { class: 'post-rich-text' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
