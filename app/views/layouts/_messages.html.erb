<div class="row">
	<div class="col-12">
		<% flash.each do |type, message| %>
			<div id="topNotification" class="alert <%=bootstrap_class_for(type) %> alert-dismissible fade show">
				<button class="close" data-bs-dismiss="alert"> <%= icon 'fas', 'times' %></button>
				<%= message %>
			</div>
		<% end %>
	</div>
</div>
