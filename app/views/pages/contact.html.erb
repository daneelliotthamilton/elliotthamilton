<div class="page-header">
  <h1>Contact Us</h1>
</div>
<div class="row">
  <div class="col-sm-6">
    <address>
      <h4>Saint Kitts and Nevis:</h4>
      Chambers,<br>
      Suite C23, The Sands<br>
      P.O. Box 1936<br>
      Basseterre, Saint George<br>
      Saint Kitts and Nevis<br>
      Tel: (869) 466-3529
    </address>
    <address>
    <h4>Saint Lucia:</h4>
    Chambers,<br>
      McVane Drive, Sans Souci<br>
      P.O. Box 1396<br>
      Castries<br>
      Saint Lucia<br>
      Tel: (758) 572-3529
    </address>
  </div>
  <div class="col-sm-6">
    <h4>Send a Message</h4>
      <%= simple_form_for @feedback, url: url_for(action: 'create', controller: 'support/feedbacks'), method: :post do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :subject %>
        <%= f.input :message, as: :text, input_html: { rows: 10 } %>
        <p>
          <%= flash[:recaptcha_error] %>
          <% if @show_checkbox_recaptcha %>
            <%= recaptcha_tags site_key: Rails.application.credentials.recaptcha_v2[:site_key] %>
          <% else %>
            <%= recaptcha_v3(action: 'send_feedback') %>
          <% end %>
        </p>
        <%= f.button :submit, "Send", disable_with: "Processing...", class: 'btn btn-primary', id: 'contact-form-button' %>
      <% end %>
  </div>
</div>
